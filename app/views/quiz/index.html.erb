<form id="regForm" action="">
<% cards.each do |card| %> 
	<%= content_tag :div, class: 'tab', data: { card: card } do %>
		<h3>Question </h3></br>
		<p><%= card.question %></p>
		<p><input class="answer" placeholder="Type your answer here..." oninput="this.className = ''"></p>
	<% end %>
<% end %>

<div style="overflow:auto;">
  <div style="float:right;">
    <button type="button" class="waves-effect waves-light btn-large" id="prevBtn">Previous</button>
    <button type="button" class="waves-effect waves-light btn-large" id="nextBtn" data-cards=<%= raw cards.to_json %>>Next</button>

		<%= link_to 'Continue', quiz_deck_path(deck_id), id: 'continueBtn',
				class: 'waves-effect waves-light btn-large', style: 'display: none' %>
		<%= link_to 'Quit', decks_path, id: 'quitBtn',
				class: 'waves-effect waves-light btn-large', style: 'display: none' %>
  </div>
</div>

<!-- Circles which indicates the steps of the form: -->
<div style="text-align:center;margin-top:40px;">
	<% cards.each do |card| %> 
  		<span class="step"></span>
 	<% end %>
</div>

</form>

<%= javascript_pack_tag "quiz" %>